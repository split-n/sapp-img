<Page
    x:Name="pageRoot"
    x:Class="App2.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App2"
    xmlns:common="using:App2.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
    </Page.Resources>

    <Grid>
        <Canvas x:Name="container" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <!-- Background="#00000000" は必須 -->
            <Canvas Canvas.Top="0" Canvas.Left="0" Canvas.ZIndex="10" x:Name="InkCanvas" PointerEntered="InkCanvas_PointerEntered" PointerPressed="InkCanvas_PointerPressed" Background="#00000000"/>
            <Image Canvas.Top="0" Canvas.Left="0" x:Name="image" Stretch="Uniform" ImageOpened="image_ImageOpened" DoubleTapped="image_DoubleTapped"/>
        </Canvas>
    </Grid>
</Page>
